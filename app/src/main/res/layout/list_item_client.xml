<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >


    <ImageView
        android:id="@+id/item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/item_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#012c57"
        android:layout_margin="2dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_img"
        android:layout_toEndOf="@+id/item_img"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_c_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_margin="2dp"
        android:layout_below="@+id/item_review"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_desing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_below="@id/item_c_name"
        android:layout_toLeftOf="@+id/item_company"
        android:layout_toStartOf="@+id/item_company"
        android:textStyle="bold"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_margin="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp" />

</RelativeLayout>